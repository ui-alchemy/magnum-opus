= content_for(:content) do

  %section.content
    %h1 Forms

    %a.button.primary.download{ "href" => "#" }
      = "Download component"

    %ul.page_nav
      %li
        %a{ "href" => "#preview" }
          = "Preview"
      %li
        %a{ "href" => "#layout" }
          = "Layout"
      %li
        %a{ "href" => "#elements" }
          = "Elements"
      %li
        %a{ "href" => "#features" }
          = "Features"

    %p.about
      = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec mattis lectus vel justo sagittis mollis. Nullam sed purus non libero suscipit semper. Fusce sagittis mattis tortor a vulputate. Suspendisse eget erat vel justo sodales fermentum ut vitae dolor. Ut eget eros luctus lacus tincidunt tristique non vitae sem. Pellentesque et tellus quis orci mattis laoreet eu at odio. Nunc tempor neque sit amet quam fringilla sed elementum risus volutpat."


    %section
      %h2#preview.bottom_line Preview

      .example
        %form.form
          .control_group
            .label
              %label{:for => "preview_name"} Name and surname
            .input
              %input{:type => "text", :id => "preview_name"}
              %span.hint The length should be between 1-50 characters.

          .control_group
            .label.help
              %i ?
              %label{:for => "preview_login"} Login name
              %span You can fill in your own login name, otherwise your <nobr>e-mail</nobr> will be used as a login information.
            .input
              %input{:type => "text", :id => "preview_login"}
              %span.hint The length should be between 1-15 characters.

          .control_group.required
            .label
              %label{:for => "preview_email"} E-mail
            .input
              %input{:type => "email", :id => "preview_email", :required => "required"}

          .control_group.required
            .label
              %label{:for => "preview_password"} Password
            .input
              %input{:type => "password", :id => "preview_password", :required => "required"}
              %span.hint You need to use at least one capital letter, one digit and one special character (such as "." "," "_" "-"). The length should be between 1-15 characters.

          .control_group.required
            .label
              %label{:for => "preview_password_confirm"} Password confirmation
            .input
              %input{:type => "password", :id => "preview_password_confirm", :required => "required"}
              %span.hint Please re-type your password.

          .control_group.buttons
            .label
            .input
              %input.btn.primary{:type => "submit", :value => "Save"}
              %a.btn{"href" => "#"}
                = "Cancel"


    %section
      %h2#layout.bottom_line Layout
      %ul.switcher
        %li.selected
          %a{ "href" => "#", "data-component" => "example-tab", "data-type" => "wide", "data-target" => ".form", "data-class" => "form" }
            = "Wide version"
        %li
          %a{ "href" => "#", "data-component" => "example-tab", "data-type" => "labels_top", "data-target" => ".form", "data-class" => "form labels_top" }
            = "Labels top"
        %li
          %a{ "href" => "#", "data-component" => "example-tab", "data-type" => "messages_bottom", "data-target" => ".form", "data-class" => "form messages_bottom" }
            = "Messages bottom"
        %li
          %a{ "href" => "#", "data-component" => "example-tab", "data-type" => "narrow", "data-target" => ".form", "data-class" => "form labels_top messages_bottom" }
            = "Narrow version"

      .example
        = render :partial => "example"

      .instructions
        %p
          = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec mattis lectus vel justo sagittis mollis. Nullam sed purus non libero suscipit semper. Fusce sagittis mattis tortor a vulputate. Suspendisse eget erat vel justo sodales fermentum ut vitae dolor. Ut eget eros luctus lacus tincidunt tristique non vitae sem. Pellentesque et tellus quis orci mattis laoreet eu at odio. Nunc tempor neque sit amet quam fringilla sed elementum risus volutpat."
      .markup
        %ul.switcher
          %li.selected
            %a{ "href" => "#", "data-component" => "code-tab", "data-format" => "html" }
              = "HTML"
          %li
            %a{ "href" => "#", "data-component" => "code-tab", "data-format" => "haml" }
              = "Haml"
          %li
            %a{ "href" => "#", "data-component" => "code-tab", "data-format" => "simple_form" }
              = "Simple Form"

        - ['wide', 'labels_top', 'messages_bottom', 'narrow'].each_with_index do |type, type_index|
          - ['html', 'haml', 'simple_form'].each_with_index do |format, format_index|
            %div{ "class" => "#{'hidden' if type_index != 0  || format_index != 0}", "data-component" => "tab-container", "data-type" => type, "data-format" => format }
              %pre
                = preserve do
                  = render_code_example('layout', type, format)

    %section
      %h2#elements.bottom_line Elements

      %ul.section_nav
        %li
          %a{ "href" => "#text_input" }
            = "Text input"
        %li
          %a{ "href" => "#combobox" }
            = "ComboBox"
        %li
          %a{ "href" => "#radio_button" }
            = "Radio button"
        %li
          %a{ "href" => "#checkbox" }
            = "Checkbox"
        %li
          %a{ "href" => "#select" }
            = "Select"


      .element
        %h3#combobox.bottom_line ComboBox

        %ul.source_options
          %li
            %a{ "href" => "#" }
              = "SCSS source"
            %a{ "href" => "#" }
              = "Compiled CSS"
            %a{ "href" => "#" }
              = "Javascript"

        %ul.switcher
          %li.selected
            %a{ "href" => "#" }
              = "Default"
          %li
            %a{ "href" => "#" }
              = "Disabled"
          %li
            %a{ "href" => "#" }
              = "Read-only"
          %li
            %a{ "href" => "#" }
              = "Error state"
          %li
            %a{ "href" => "#" }
              = "Warning state"

    %section
      %h2#features.bottom_line Features

-#= content_for(:content) do
  .content
    %h2
      = "Forms"

    %form.form
      .control_group
        .label.help
          %i ?
          %label{:for => "input"} Text input
          %span Here will be placed explanatory information about concrete label term. In this case it would be for "Text input". What is Text input?
        .input
          %input{:type => "text", :id => "input", :placeholder => "Placeholder"}
          %span.hint Fill in your given name. Maximum allowed length is up to 30 characters. (Hint length is max 2 lines)
          %span.note This is note, which is visible all the time. Can be longer than one line. Don't use if not necessary.

      .control_group
        .label
          %label{:for => "input_password"} Password input
        .input
          %input{:type => "password", :id => "input_password"}

      .control_group
        .label
          %label{:for => "input_email"} E-mail input
        .input
          %input{:type => "email", :id => "input_email"}

      .control_group
        .label
          %label{:for => "input_url"} URL input
        .input
          %input{:type => "url", :id => "input_url"}

      .control_group
        .label
          %label{:for => "input_search"} Search input
        .input
          %input{:type => "text", :id => "input_search"}
          %span.note Use classic "text" type since "search" type has lot of browser restrictions in css styling.

      .control_group.required
        .label
          %label{:for => "input_required"} Required input
        .input
          %input{:type => "text", :id => "input_required", :required => "required"}

      .control_group.informative
        .label
          %label Informative item
        .input
          %span.value This is informative text

      .control_group.readonly
        .label
          %label{:for => "input_readonly"} Read-only input
        .input
          %input{:type => "text", :id => "input_readonly", :readonly => "readonly", :value => "Readonly text"}

      .control_group.disabled
        .label
          %label{:for => "input_disabled"} Disabled input
        .input
          %input{:type => "text", :id => "input_disabled", :disabled => "disabled"}

      .control_group.success
        .label
          %label{:for => "input_success"} Input with success
        .input
          %input{:type => "text", :id => "input_success"}
          %span.message This looks great! :)
          %span.hint Fill in password in length of 6-20 characters.
          %span.note This class will be used for some required confirmations on fly.

      .control_group.warning.required
        .label.help
          %i ?
          %label{:for => "input_warning"} Input with warning
          %span Here will be placed explanatory information about concrete control. In this case it would be for "Input with warning". What is Input with warning?
        .input
          %input{:type => "text", :id => "input_warning", :required => "required"}
          %span.message Password is volnurable. Use at least one letter, number and special character.
          %span.hint Fill in password in length of 6-20 characters.

      .control_group.error
        .label.help
          %i ?
          %label{:for => "input_error"} Input with error
          %span Here will be placed explanatory information about concrete control. In this case it would be for "Input with error". What is Input with error?
        .input
          %input{:type => "text", :id => "input_error"}
          %span.message Argh! Password is too short. Length should be 6-20 characters.
          %span.hint Fill in password in length of 6-20 characters.
          %span.note Here you can see combination of Note below input and Hint on the right. Not very common combination.

      .control_group
        .label
          %label Single-select
        .input
          %select
            %option
              = "Option 1"
            %option
              = "Option 2"
            %option
              = "Option 3"

      .control_group
        .label
          %label Multiple-select
        .input
          %select{ :multiple => "multiple" }
            %option
              = "Option 1"
            %option
              = "Option 2"
            %option
              = "Option 3"

      .control_group.checkbox
        .label
          %label Checkbox
        .input
          .control
            %input{:type => "checkbox", :id => "checkbox_01"}
            %label.control_label{:for => "checkbox_01"} Check me

      .control_group.checkbox
        .label
          %label Checkboxes - vertical
        .input
          .control
            %input{:type => "checkbox", :id => "checkbox_02"}
            %label{:for => "checkbox_02"} Option A
          .control
            %input{:type => "checkbox", :id => "checkbox_03"}
            %label{:for => "checkbox_03"} Option B
          .control
            %input{:type => "checkbox", :id => "checkbox_04"}
            %label{:for => "checkbox_04"} Option C

      .control_group.checkbox.horizontal
        .label
          %label Checkboxes - horizontal
        .input
          .control
            %input{:type => "checkbox", :id => "checkbox_05"}
            %label{:for => "checkbox_05"} Option A
          .control
            %input{:type => "checkbox", :id => "checkbox_06"}
            %label{:for => "checkbox_06"} Option B
          .control
            %input{:type => "checkbox", :id => "checkbox_07"}
            %label{:for => "checkbox_07"} Option C

      .control_group.radio
        .label
          %label Radio buttons - vertical
        .input
          .control
            %input{:type => "radio", :id => "radio_01", :name => "radio_vertical"}
            %label{:for => "radio_01"} Option A
          .control
            %input{:type => "radio", :id => "radio_02", :name => "radio_vertical"}
            %label{:for => "radio_02"} Option B
          .control
            %input{:type => "radio", :id => "radio_03", :name => "radio_vertical"}
            %label{:for => "radio_03"} Option C

      .control_group.radio.horizontal
        .label
          %label Radio buttons - horizontal
        .input
          .control
            %input{:type => "radio", :id => "radio_04", :name => "radio_horizontal"}
            %label{:for => "radio_04"} Option A
          .control
            %input{:type => "radio", :id => "radio_05", :name => "radio_horizontal"}
            %label{:for => "radio_05"} Option B
          .control
            %input{:type => "radio", :id => "radio_06", :name => "radio_horizontal"}
            %label{:for => "radio_06"} Option C

      .control_group
        .label
          %label{:for => "input_file"} File input
        .input
          %input{:type => "file", :id => "input_file"}

      .control_group
        .label
          %label{:for => "textarea_01"} Textarea
        .input
          %textarea{:id => "textarea_01"}

      .control_group
        .label
          %label{:for => "date_01"} Date
        .input
          %input{:type => "date", :id => "date_01"}

      .control_group
        .label
          %label{:for => "number_01"} Number input
        .input
          %input{:type => "number", :id => "number_01", :min => 0, :max => 20, :value => 0}

      .control_group
        .label
          %label{:for => "range_01"} Range input
        .input
          %input{:type => "range", :id => "range_01", :min => 0, :max => 20, :value => 0}

      .control_group.buttons
        .label
        .input
          %input.btn.primary{:type => "submit", :value => "Save"}
          %input.btn{:type => "submit", :value => "Cancel"}
